  "compilerOptions": {
     "noImplicitAny": false,
     "noEmitOnError": true,
     "removeComments": false,
     "sourceMap": true,
     "declaration": true,
     "target": "es5",
     "outDir": "dist/",
     "lib": ["ES2021"]
  },
  "include": [
    "src/**/*"
  ],
